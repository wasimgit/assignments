{
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:yml/recommended"
  ],
  "ignorePatterns": [
    "dist",
    "node_modules",
    "components/**/*.js"
  ],
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Drupal": true,
    "drupalSettings": true,
    "once": true,
    "CKEDITOR": true,
    "CKEditor5": true
  },
  "rules": {
    "prettier/prettier": "error",
    "consistent-return": [
      "off"
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "max-nested-callbacks": [
      "warn",
      3
    ],
    "import/no-mutable-exports": [
      "warn"
    ],
    "no-plusplus": [
      "warn",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-param-reassign": [
      "off"
    ],
    "no-prototype-builtins": [
      "off"
    ],
    "valid-jsdoc": [
      "warn",
      {
        "prefer": {
          "returns": "return",
          "property": "prop"
        },
        "requireReturn": false
      }
    ],
    "no-unused-vars": [
      "warn"
    ],
    "prefer-regex-literals": "off",
    "operator-linebreak": [
      "error",
      "after",
      {
        "overrides": {
          "?": "ignore",
          ":": "ignore"
        }
      }
    ]
  }
}